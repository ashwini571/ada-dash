{{#> base  }}

    {{#*inline "body-block" }}
        <div class="container-fluid">
            <br><br><br>
            <div class="row">
                <div class="col-md-5">
                    <div class="card border-light ">
                        <div class="card-header">Note </div>
                        <div class="card-body">

                            <ol>
                                <li class="text-muted" style="margin-bottom:10px;">
                                    Generated sql can be modified with custom WHERE and LIKE clause
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="container card card-custom" style="padding-bottom: 20px;">
                        <form>
                            <div class="text-center" style="padding-top:28px "> <h1 class="h3 mb-3 font-weight-normal">Add plot for usecase_id :- {{usecase_id}}</h1> </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Tablename:</label>
                                <div class="col-sm-10">
                                    <input type="text" readonly class="form-control" value="{{table}}">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label  class="col-sm-2 col-form-label">X-axis:</label>
                                <div class="col-sm-10">
                                    <select class="form-control" name="x-axis" id="x-axis" required>
                                        {{#each result}}
                                            <option value="{{column_name}}" >{{column_name}}</option>
                                        {{/each}}
                                    </select>
                                    <small id="y-axis-help" class="form-text text-muted">Choose only date-time field.</small>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label  class="col-sm-2 col-form-label">Y-axis:</label>
                                <div class="col-sm-10">
                                    <select class="form-control" name="y-axis" id="y-axis" required>
                                       {{#each result}}
                                           <option value="{{column_name}}" >{{column_name}}</option>
                                       {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label  class="col-sm-4 col-form-label">Date-Time Format:</label>
                                <div class="col-sm-8" >
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="epoch"  value="epoch" >
                                        <label class="form-check-label">
                                           Epoch
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="timestamp" value="timestamp">
                                        <label class="form-check-label">
                                            Timestamp
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <button class="btn btn-md btn-primary" type="submit">Generate Sql</button>
                        </form>
                    </div>
                </div>
            </div>
            <br><br>
            <hr>
        </div>
    {{/inline}}

{{/base}}