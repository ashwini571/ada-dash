{{#> base  }}

    {{#*inline "body-block" }}
        <div class="container-fluid">
            <br><br><br>
            <div class="row">
                <div class="col-md-5">
                    <div class="card ">
                        <div class="card-header">Note </div>
                        <div class="card-body">

                            <ol>
                                <li class="text-muted" style="margin-bottom:10px;">
                                    The default generated sql gives a plot of distinct count of selected field(y-axis) for each day vs date-time field(x-axis).
                                </li>
                                <br>
                                <li class="text-muted" style="margin-bottom:10px;">
                                    Generated sql can be modified with custom WHERE and LIKE clause
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="container card card-custom" style="padding-bottom: 20px;">
                        <form id="gen_sql_form" method="post" action="/config/plot/add/{{usecase_id}}">
                            <div class="text-center" style="padding-top:28px "> <h1 class="h3 mb-3 font-weight-normal">Add plot for usecase_id :- {{usecase_id}}</h1> </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Table :</label>
                                <div class="col-sm-10">
                                    <input type="text" name="tablename" id="tablename_form" readonly class="form-control" value="{{table}}">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Title :</label>
                                <div class="col-sm-10">
                                    <input type="text" name="title" id="title_form"  class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label  class="col-sm-2 col-form-label">X-axis :</label>
                                <div class="col-sm-10">
                                    <select class="form-control" name="x_axis" id="x_axis_form" required>
                                        {{#each result}}
                                            <option value="{{this}}" >{{this}}</option>
                                        {{/each}}
                                    </select>
                                    <small id="y_axis_help" class="form-text text-muted">Choose only date-time field.</small>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label  class="col-sm-2 col-form-label">Y-axis :</label>
                                <div class="col-sm-10">
                                    <select class="form-control" name="y_axis" id="y_axis_form" required>
                                       {{#each result}}
                                           <option value="{{this}}" >{{this}}</option>
                                       {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label  class="col-sm-4 col-form-label">Date-Time Format :</label>
                                <div class="col-sm-8" >
                                    <div class="form-check">
                                        <label class="form-check-label">
                                        <input class="form-check-input" type="radio" name="date_time_format"  value="epoch" >
                                           Epoch
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">
                                        <input class="form-check-input" type="radio" name="date_time_format" value="timestamp">
                                            Timestamp
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row" style="display:none" id="sql_block">
                                <label  class="col-sm-2 col-form-label">Sql :</label>
                                <div class="col-sm-10">
                                    <textarea type="text" name="gen_sql" class="form-control -p3" id="gen_sql" rows=5></textarea>
                                </div>
                            </div>
                            <button class="btn btn-md btn-primary" type="button" id="gen_sql_btn_add">Generate Sql</button>
                            <button class="btn btn-md btn-primary" type="submit" id="save_btn" style="display: none">Save</button>
                        </form>
                    </div>
                </div>
            </div>
            <br><br>
            <hr>
        </div>
    {{/inline}}
    {{#*inline "scripts-block" }}
        <script src="/public/js/utils_client.js"></script>
        <script src="/public/js/add_plot_client.js"></script>
    {{/inline}}

{{/base}}