{{#> base  }}

    {{#*inline "head-block" }}
        <link rel="stylesheet" href="/public/js/pivottable/dist/pivot.css">
        <link rel="stylesheet" href="/public/css/styles.css">
    {{/inline}}

    {{#*inline "body-block" }}

        <div class="container" >
            <br><br>
            <div class="row">
                <div class="col-10" >
                    <h3 style="font-family: 'Hammersmith One', sans-serif;	border-left:5px solid #000000;padding-left: 10px">
                        {{title}}
                        in last
                        <input  style="width: 85px" list="periods" name="period" id="period" value="{{result.0.time_period}}">
                        <datalist id="periods">
                            <!-- Options appended by javascript -->
                        </datalist>
                        days
                    </h3>
                </div>

                <div class="col-2">
                    <div class="flex" style="float: right;">
                        <a href="/all_queries/{{result.0.usecase_id}}" class="bttn">Configure</a>
                    </div>
                </div>

            </div>
            <br>
        </div>
        <hr style=" border: 0; height: 1px;background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));">
        <br>
        <div class="container">
            <div class="row">
                <div class="col-3">
                    <h5><b>Choose Type of Query</b></h5>
                </div>
                <div class="col-3">
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Select
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            {{#each result}}
                                <a class="dropdown-item" href="#" query_type="{{type}}" usecase_id="{{usecase_id}}" id="{{id}}" inputVar="{{inputVar}}">{{query_title}}</a>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
            <hr style=" border: 0; height: 1px;background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));">
            <h5>Output:</h5>
            <div class="row card" style="height: 700px;background-color:oldlace;padding:10px;width:auto">

                <h5 id="info"></h5>
                <div class="table-responsive"  style="height:auto;max-height: 700px;max-width:1200px">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr id="fields">

                            </tr>
                        </thead>

                        <tbody id="rows">

                        </tbody>
                    </table>

                    <div id="output">

                    </div>

                </div>
            </div>
            <hr class="style-five">

        </div>


    {{/inline}}

   
    {{#*inline "scripts-block" }}
        <!-- jquerui is a dependency for using pivotui function -->
        <script src="/static/jqueryui/jquery-ui.js"></script>
        <script src="/public/js/pivottable/dist/pivot.js"></script>

        <!-- CDNs (Plotly for graphic visualisation) -->
        <script src="https://cdn.plot.ly/plotly-basic-latest.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/pivottable/2.22.0/plotly_renderers.min.js"></script>
        
        <!-- Custom Scripts -->
        <script src="/public/js/utils_client.js"></script>
        <script src="/public/js/analytics_client.js"></script>
        <script src="/public/js/custom.js"></script>

    {{/inline}}



{{/base}}

