{{#> base  }}
{{#*inline "head-block" }}
    <link rel="stylesheet" href="/public/css/cards.css">
{{/inline}}
    {{#*inline "body-block" }}
        <div class="container">
            <br><br><br>
            <div class="row">
                <div class="col-md-10">
                    <h1 class="title">ADA-Dashboard</h1>
                </div>
                <div class="col-md-2" >
                    <a  style="float:right;" type="button" class="btn btn-secondary btn" href="/add"><span></span> + Add</a>
                </div>
            </div>
            <div class="row"  style="margin-top:5px;float:right;" >
                <a type="button" class="btn btn-secondary btn" href="/run_query"><span></span> Run Query</a>
            </div>

            <br><br><br>
        </div>

        <hr style=" border: 0; height: 1px;background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));">

        <div class="container">
            <div class="row">
                {{#if result}}
                    {{#each result}}
                        <div class="column">
                            <a href="/analytics/{{id}}" class="custom-card">
                                <div class="card">
                                    <p>{{title}}</p>
                                </div>
                            </a>
                        </div>
                    {{/each}}
                {{else}}
                    <h3>No Results !</h3>
                {{/if}}
            </div>
        </div>
        {{#if paginate }}
            <!-- Pagination -->
            <nav style="margin-top: 100px">
                <hr style="width:500px;">
                <ul class="pagination justify-content-center">
                    <li class="page-item {{#ifCond 1 '==' paginate.page }}disabled{{/ifCond}}">
                        <a class="page-link" href="?page=1">First</a>
                    </li>

                    {{#if paginate.hasPreviousPages}}
                        <li class="page-item">
                            <a class="page-link" href="{{paginate.href true prev}}">Previous</a>
                        </li>
                    {{ else}}
                        <li class="page-item disabled">
                            <a class="page-link" href="#">Previous</a>
                        </li>
                    {{/if}}

                    {{#each pages }}
                        <li class="page-item {{#ifCond number '==' ../paginate.page }}active{{/ifCond}}"   ><a class="page-link" href="{{url}}" >{{number}}</a></li>
                    {{/each}}

                    {{# if next_pages }}
                        <li class="page-item ">
                            <a class="page-link" href="{{paginate.href next 1}}">Next</a>
                        </li>
                    {{else}}
                        <li class="page-item disabled ">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    {{/if}}
                    <li class="page-item {{#ifCond pages.length '==' paginate.page }}disabled{{/ifCond}}">
                        <a class="page-link" href="?page={{pages.length}}">Last</a>
                    </li>

                </ul>
            </nav>
        {{/if}}



    {{/inline}}

{{/base}}

